<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.androidlab2017.epam.task2">

    <permission android:name="com.androidlab2017.epam.task2.custom_permission"
                android:description="@string/descr_custom_perm"
                android:label="@string/label_custom_perm"
                android:protectionLevel="dangerous"
        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.androidlab2017.epam.task2.MainActivity"
                  android:permission="com.androidlab2017.epam.task2.custom_permission"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>